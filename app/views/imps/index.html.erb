<div class="header">
  <a href="/species" class="return-top"><%="#{current_user.nickname}さんの捕獲状況"%></a>
</div>
<div class="contents">
  <div class="background-contents">
  </div>
  <div class="targets">
    <div class="target">
      <div class="count">ガンダルヴァの捕獲数:<%= Gandharva.includes(:user).where(user_id: current_user.id).count%></div>
      <%= form_with(url: imps_path, model: Gandharva, method: :get, local: true) do |f| %>
        <%= f.submit "＋" , class: "btn-gradient-3d", name: "gandharva"%> 
      <% end %>
    </div>

    <div class="target">
      <div class="count">エイロージュの捕獲数:<%= Airloge.includes(:user).where(user_id: current_user.id).count%></div>
