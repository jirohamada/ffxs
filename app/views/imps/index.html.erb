        <%= f.submit "＋" , class: "btn-gradient-3d", name: "airloge"%> 
      <% end %>
    </div>

    <div class="target">
      <div class="count">ガルキマセラの捕獲数:<%= Gulquimasera.includes(:user).where(user_id: current_user.id).count%></div>
      <%= form_with(url: imps_path, model: Gulquimasera, method: :get, local: true) do |f| %>
        <%= f.submit "＋" , class: "btn-gradient-3d", name: "gulquimasera"%> 
      <% end %>
    </div>
  </div>
</div>