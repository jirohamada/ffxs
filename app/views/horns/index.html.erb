<div class="header">
  <a href="/species" class="return-top"><%="#{current_user.nickname}さんの捕獲状況"%></a>
</div>
<div class="contents">
  <div class="background-contents">
  </div>
  <div class="targets">

    <div class="target">
      <div class="count">デュアルホーンの捕獲数:<%= Dualhorn.includes(:user).where(user_id: current_user.id).count%></div>
      <%= form_with(url: horns_path, model: @dualhorn, method: :get, local: true) do |f| %>
        <%= f.submit "＋" , class: "btn-gradient-3d", name: "dualhorn"%> 
      <% end %>
    </div>

    <div class="target">
      <div class="count">グレンデルの捕獲数:<%= Gurendel.includes(:user).where(user_id: current_user.id).count%></div>
      <%= form_with(url: horns_path, model: @gurendel, method: :get, local: true) do |f| %>
        <%= f.submit "＋" , class: "btn-gradient-3d", name: "gurendel"%> 
      <% end %>
    </div>

    <div class="target">
      <div class="count">ヴァラーハの捕獲数:<%= Varah.includes(:user).where(user_id: current_user.id).count%></div>
      <%= form_with(url: horns_path, model: @varah, method: :get, local: true) do |f| %>
        <%= f.submit "＋" , class: "btn-gradient-3d", name: "varah"%> 
      <% end %>
    </div>
  </div>
</div>