<div class="header">
  <a href="/species" class="return-top"><%="#{current_user.nickname}さんの捕獲状況"%></a>
</div>
<div class="contents">
  <div class="background-contents">
  </div>
  <div class="targets">

    <div class="target">
      <div class="count">ボムの捕獲数:<%= Bomb.includes(:user).where(user_id: current_user.id).count %></div>
      <%= form_with(url: bombs_path, model: Bomb, method: :get, local: true) do |f| %>
        <%= f.submit "＋" , class: "btn-gradient-3d", name: "bomb"%> 
      <% end %>       
    </div>

    <div class="target">
      <div class="count">グレネードの捕獲数:<%= Grenade.includes(:user).where(user_id: current_user.id).count %></div>
      <%= form_with(url: bombs_path, model: Grenade, method: :get, local: true) do |f| %>
        <%= f.submit "＋" , class: "btn-gradient-3d", name: "grenade"%> 
      <% end %>       
    </div>

    <div class="target">
      <div class="count">ピュロボルスの捕獲数:<%= Pyurobol.includes(:user).where(user_id: current_user.id).count %></div>
      <%= form_with(url: bombs_path, model: Pyurobol, method: :get, local: true) do |f| %>
        <%= f.submit "＋" , class: "btn-gradient-3d", name: "pyurobol"%> 
      <% end %>       
    </div>
  </div>
</div>