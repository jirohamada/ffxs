<div class="header">
  <a href="/areas" class="return-top"><%="#{current_user.nickname}さんの捕獲状況"%></a>
</div>
<div class="contents">
  <div class="background-contents"></div>
  <div class="targets">

    <div class="target">
      <div class="count">ディノニクスの捕獲数:<%= Dinonic.includes(:user).where(user_id: current_user.id).count %></div>
      <%= form_with(url: kirika_index_path, model: Dinonic, method: :get, local: true) do |f| %>
        <%= f.submit "＋" , class: "btn-gradient-3d", name: "dinonic"%> 
      <% end %>       
    </div>

    <div class="target">
      <div class="count">キラービーの捕獲数:<%= Killerbee.includes(:user).where(user_id: current_user.id).count%></div>
