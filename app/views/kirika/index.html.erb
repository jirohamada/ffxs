        <%= f.submit "＋" , class: "btn-gradient-3d", name: "yellow"%> 
      <% end %>       
    </div>

    <div class="target">
      <div class="count">バルサムの捕獲数:<%= Balsam.includes(:user).where(user_id: current_user.id).count %></div>
      <%= form_with(url: kirika_index_path, model: Balsam, method: :get, local: true) do |f| %>
        <%= f.submit "＋" , class: "btn-gradient-3d", name: "balsam"%> 
      <% end %>       
    </div>
  </div>
</div>