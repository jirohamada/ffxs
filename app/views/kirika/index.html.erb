        <%= f.submit "＋" , class: "btn-gradient-3d", name: "killerbee"%> 
      <% end %>
    </div>

    <div class="target">
      <div class="count">イエローエレメントの捕獲数:<%= Yellow.includes(:user).where(user_id: current_user.id).count %></div>
