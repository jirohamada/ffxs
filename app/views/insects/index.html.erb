        <%= f.submit "＋" , class: "btn-gradient-3d", name: "wasp"%> 
      <% end %>
    </div>

    <div class="target">
      <div class="count">ネビロスの捕獲数:<%= Neviro.includes(:user).where(user_id: current_user.id).count%></div>
      <%= form_with(url: insects_path, model: Neviro, method: :get, local: true) do |f| %>
        <%= f.submit "＋" , class: "btn-gradient-3d", name: "neviro"%> 
      <% end %>
    </div>
  </div>
</div>